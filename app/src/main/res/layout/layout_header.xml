<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:background="@color/a0">
    <!--左侧图片-->
    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_marginLeft="@dimen/padding16"
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/ic_return_01"/>
        <TextView
            android:layout_marginLeft="@dimen/padding8"
            android:layout_toRightOf="@+id/left_image"
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="关闭"
            android:visibility="gone"/>
    </RelativeLayout>
    <!--中间文字-->
    <TextView
        android:id="@+id/middle_text"
        style="@style/font_16_white"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="--"
        />

    <!--右侧文案-->
    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="@dimen/header_right_widht"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/right_txt"
            style="@style/font_16_white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding8"
            android:gravity="center"
            android:maxLines="1"
            android:text="--"/>
    </RelativeLayout>
    <ImageView
        style="@style/common_divider_line_bottom_style"/>

</RelativeLayout>
